@page
@model TextSearchEngine.Pages.Account.AddModel
@{
}

<form method="post" enctype="multipart/form-data">
    <hr>
    <div class="form-group">
        <label asp-for="essay.Title" class="form-label">标题</label>
        <input asp-for="essay.Title" type="text" class="form-control">
        <span asp-validation-for="essay.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="essay.Author" class="form-label">作者</label>
        <input asp-for="essay.Author" type="text" class="form-control">
        <span asp-validation-for="essay.Author"></span>
    </div>
    <div class="form-group">
        <label asp-for="essay.Content" class="form-label">内容</label>
        <input asp-for="essay.Content" type="text" class="form-control">
        <span asp-validation-for="essay.Content"></span>
    </div>
    <div class="form-group">
        <label asp-for="essay.Label" class="form-label">标签</label>
        <input asp-for="essay.Label" type="text" class="form-control">
        <span asp-validation-for="essay.Label"></span>
    </div>
    <div class="form-group">
        <label asp-for="essay.Keyword" class="form-label">关键字</label>
        <div class="input-group has-validation">
            <input type="text" class="form-control" asp-for="essay.Keyword" aria-describedby="inputGroupPrepend" required>
            <div class="invalid-feedback">
                请填写关键字
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="formFile">选择图片文件</label>
        <input asp-for="formFile" type="file" class="form-control">
        <span asp-validation-for="formFile">请上传PNG,JPG图片格式文件</span>
    </div>
    <button type="submit" class="btn btn-primary">提交</button>
</form>